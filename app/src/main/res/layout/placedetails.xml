
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@color/accent4"

    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/accent2"

        app:popupTheme="@style/AppTheme.Dark.PopupOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"

            android:paddingBottom="@dimen/activity_vertical_margin">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/area1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="text"
                        android:hint="Area"
                        android:textColor="#ffffff"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/white">
                    <EditText android:id="@+id/rate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:editable="false"
                        android:hint="Rate"
                        android:textColor="#ffffff"/>

                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/white"
                >
                <EditText
                    android:id="@+id/description1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#ffffff"

                    android:hint="Description"
                    android:layout_column="0" />

            </android.support.design.widget.TextInputLayout>


            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/latitude1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Latitude"
                        android:inputType="text"
                        android:textColor="#ffffff"
                         />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/longitude1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Longitude"
                        android:textColor="#ffffff"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"

                        android:text="Show on Map"
                        android:id="@+id/showonmap" />
                </android.support.design.widget.TextInputLayout>




            </TableRow>
            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/white"> <EditText
                android:id="@+id/address1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address"
                android:layout_column="0"


                android:textColor="#ffffff"

                 />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:text="Images of the Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />


            <TableRow>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="2"
                    android:id="@+id/imageView11"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_menu_camera"
                    android:background="#00ffffff" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="2"
                    android:id="@+id/imageView21"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_menu_camera"
                    android:background="#00ffffff" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="2"
                    android:id="@+id/imageView31"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_menu_camera"
                    android:background="#00ffffff" />

            </TableRow>
<TableRow>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"

        android:text="Contact Owner"
        android:id="@+id/Contact" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:text="Report"
        android:id="@+id/Report" />

</TableRow>









        </TableLayout>

    </ScrollView>

</LinearLayout>